	<script>
		$(".nextButton").click(function() {
			$.ajax({
				method: "POST",
				contentType:"application/json; charset=utf-8",
				url: "/booking/cancelOrder",
				data: JSON.stringify(
					{ 
						orderId: "<%= orderInfo._id %>"
					}
				)
			}).done(function (msg) {
				document.location.href = "/booking/cancelOrderSuccess/<%= orderInfo._id %>";
			});
		});
	</script>

