	<body>
		<div id="fh5co-wrapper">
		<div id="fh5co-page">
		<% include ../menuHeader %>
		<!-- end:fh5co-header -->

		<div id="fh5co-contact">
			<div class="container">
				<div class="row">
					<div class="col-md-8 col-md-offset-2">
						<div class="heading-section text-center animate-box">
							<h2>Cancel Order</h2>
						</div>
					</div>
				</div>
				<form action="#">
					<div class="row">
						<div class="col-md-2 animate-box movieSummary"></div>
						<div class="col-md-4 animate-box movieSummary">
							<img src="<%= orderInfo.movieCoverUrl %>">
							<div id="movieName"><%= orderInfo.movieName %></div>
							<div><%= orderInfo.showingCinema %></div>
							<div><%= orderInfo.showingTime %></div>
						</div>
						<div class="col-md-6 animate-box">
							<div id="tickets">
								<% for (ticket of orderInfo.ticketList) { %>
									<div class="ticket">
										<div class="ticketUpperArea">
											<div class="movieName"><%= orderInfo.movieName %></div>
											<div class="category"><%= ticket.ticketCategory %></div>
										</div>

										<div class="cinema">
											<%= orderInfo.showingCinema %>
										</div>

										<div class="ticketBottomArea">
											<div class="date">
												<span>Date</span>
												<span><%= ticket.date %></span>
											</div>
		
											<div class="time">
												<span>Time</span>
												<span><%= ticket.time %></span>
											</div>
		
											<div class="seat">
												<span>Seat</span>
												<span><%= ticket.seat %></span>
											</div>
											
											<div class="price">
												<span>Price</span>
												<span>$<%= ticket.price %></span>
											</div>
										</div>
										
									</div>
								<% } %>
							</div>
							<div id="subTotal">
								<div>Subtotal</div>
								<div><h2>$<%= orderInfo.subtotal %></h2></div>
							</div>
							<button type="button" class="btn btn-danger nextButton">Cancel</button>
						</div>
					</div>
				</form>
			</div>
		</div>
		<!-- END fh5co-contact -->

