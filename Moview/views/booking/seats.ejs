							<table>
								<% 
									function isOccupied(seat) { 
										let result = seatInfo.isNotOccupiedSeats.filter(isNotOccupiedSeat => (isNotOccupiedSeat.row == seat.row && isNotOccupiedSeat.column == seat.column));
										return result.length == 0
									} 
								%>
								
								<% for (let row='A'.charCodeAt(0); row<='J'.charCodeAt(0); row++) { %>
									<tr>
										<% for (let column=1; column<=20; column++) { %>
											<% if (isOccupied({row: String.fromCharCode(row), column: column})) { %>
