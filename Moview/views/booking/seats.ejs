	<script>
		let selectedSeats = [];
		let ticketsAmount = <%= seatInfo.totalTicketsAmount %>;

		$("#seatingMap .nonOccupied img").click(function() {
			let currentImg = $(this).attr("src");

			let nonOccupiedImg = "../images/seat-nonOccupied.png"
			let selectedImg = "../images/seat-selected.png";

			let selectedSeat = $(this).parent().attr("row") + $(this).parent().attr("column");
			
			if (currentImg === nonOccupiedImg) {
				if (selectedSeats.length < ticketsAmount) {
					$(this).attr("src", selectedImg);
					selectedSeats.push(selectedSeat);
					selectedSeats.sort();
				}
				else
					alert('You should not select more than ' + ticketsAmount + ' seats!');
			}
			else {
				$(this).attr("src", nonOccupiedImg);
				selectedSeats = selectedSeats.filter(seat => seat != selectedSeat)
			}
			updateSeats();
			updateNextButton();
		});

		function updateSeats() {
			let seatStr = "";
			
			if (selectedSeats.length == 0)
				seatStr = '-';
			else {
				for (seat of selectedSeats)
					seatStr += seat + ', ';
				seatStr = seatStr.slice(0, seatStr.length-2);
			}

			$("#seatsInfo h2").text(seatStr);
		}

		function updateNextButton() {
			if (selectedSeats.length < ticketsAmount)
				$(".nextButton").prop('disabled', true);
			else
				$(".nextButton").prop('disabled', false);
		}

		$(".nextButton").click(function() {
			$.ajax({
				method: "POST",
				contentType:"application/json; charset=utf-8",
				url: "/booking/selectSeats",
				data: JSON.stringify(
					{ 
						selectedSeats: selectedSeats
					}
				)
			}).done(function (msg) {
				document.location.href = "/booking/confirmOrder";
			});
		});

	</script>


